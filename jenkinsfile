


pipeline{

  agent{label 'master'}
  tools{maven 'm3'}
  stage{
     stage('checkout'){
	      steps{
		      git branch: 'main', url: ''
			  }
	  stage('Build'){
	       steps{
		        sh 'mvn compile'
			}
			
	   stage ('Test')
	        steps{
			     sh 'mvn test'
				 }
       stage ('package'){
	        steps{
			     sh 'mvn package'
				 }
         stage ('Deploy'){
	        steps{
			     sh 'java /var/lib/jenkins/workspace/petClinicDeclarativePipeline/target/* .jar'
				 }
        }
      } 
